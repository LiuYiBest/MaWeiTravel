<view><view class="topTabBar" style="{{'position:'+(headerPosition)+';'+('top:'+(headerTop)+';')}}"><block wx:for="{{orderType}}" wx:for-item="grid" wx:for-index="tbIndex" wx:key="tbIndex"><view data-event-opts="{{[['tap',[['showType',[tbIndex]]]]]}}" class="grid" bindtap="__e"><view class="{{['text',tbIndex==tabbarIndex?'on':'']}}">{{grid}}</view></view></block></view><view class="order-list"><view class="list"><block wx:if="{{list.length==0}}"><view class="onorder"><image></image><view class="text">没有相关订单</view></view></block><block wx:for="{{list}}" wx:for-item="row" wx:for-index="index" wx:key="index"><view class="row"><view class="type">{{typeText[row.type]}}</view><view class="order-info"><view class="left"><image src="{{row.img}}"></image></view><view class="right"><view class="name">{{''+row.name+''}}</view><view class="spec">{{row.spec}}</view><view class="price-number">￥<view class="price">{{row.price}}</view>x<view class="number">{{row.numner}}</view></view></view></view><view class="detail"></view><view class="btns"><block wx:if="{{row.type=='unpaid'}}"><block><view data-event-opts="{{[['tap',[['cancelOrder',['$0'],[[['list','',index]]]]]]]}}" class="default" bindtap="__e">取消订单</view><view data-event-opts="{{[['tap',[['toPayment',['$0'],[[['list','',index]]]]]]]}}" class="pay" bindtap="__e">付款</view></block></block><block wx:if="{{row.type=='back'}}"><block><view data-event-opts="{{[['tap',[['remindDeliver',['$0'],[[['list','',index]]]]]]]}}" class="default" bindtap="__e">购买成功</view></block></block><block wx:if="{{row.type=='unreceived'}}"><block><view data-event-opts="{{[['tap',[['showLogistics',['$0'],[[['list','',index]]]]]]]}}" class="default" bindtap="__e">查看物流</view><view class="pay">确认收货</view><view class="pay">我要退货</view></block></block></view></view></block></view></view></view>